<div class="flex-grow flex items-center justify-center">
  <div class="w-full md:w-3/4 lg:w-2/3 max-w-2xl">
    <h1 class="text-3xl font-bold mb-6">新規作成</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-control mb-4">
          <%= f.label :name, "名前", class: "label" %>
          <%= f.text_field :name, class: "input input-bordered w-full" %>
        </div>
        <div class="form-control mb-4">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, class: "input input-bordered w-full" %>
        </div>
        <div class="form-control mb-4">
          <%= f.label :password, "パスワード", class: "label" %>
          <%= f.password_field :password, class: "input input-bordered w-full" %>
        </div>
        <div class="form-control mb-4">
          <%= f.label :password_confirmation, "確認用パスワード", class: "label" %>
          <%= f.password_field :password_confirmation, class: "input input-bordered w-full" %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary w-full" %>
      <% end %>
      <div class='text-center mt-4'>
        <%= link_to 'ログインページへ', login_path, class: "link link-primary" %>
      </div>
  </div>
</div>