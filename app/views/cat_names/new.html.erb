<div class="flex-grow flex items-center justify-center">
  <div class="w-full md:w-3/4 lg:w-2/3 max-w-2xl">
    <h2 class="text-3xl font-bold mb-6">猫の基本情報を入力</h2>

    <%= form_with model: @form, url: cat_names_path, method: :post, local: true do |f| %>
      <div class="form-control w-full mb-4">
        <%= f.label :name, "猫の名前", class: "label" %>
        <%= f.text_field :name, class: "input input-bordered w-full" %>
      </div>
      <div class="form-control mb-4">
        <%= f.label :age, "年齢", class: "label" %>
        <%= f.number_field :age, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :cat_image, "画像アップロード", class: "label" %>
        <%= f.file_field :cat_image, class: "input input-bordered w-full", accept: 'image/*' %>
      </div>

      <%= f.submit "次へ", class: "btn btn-primary w-full" %>
    <% end %>
  </div>
</div>
