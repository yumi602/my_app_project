<div class="container mx-auto pt-3">
  <%= link_to 'ねこの登録', "#", class: "btn btn-lg btn-primary" %>

  <!-- ねこ情報一覧 -->
  <div class="flex flex-wrap">
    <% if @cats.present? %>
      <% @cats.each do |cat| %>
        <div class="w-full sm:w-full lg:w-4/12 p-3">
          <div id="cat-id-<%= cat.id %>">
            <div class="card bg-base-100 shadow-xl">
              <figure>
                  <%= image_tag "okumono-cat37.png", class: "w-full h-48 object-cover" %>
              </figure>
              <div class="card-body">
                <div class="flex items-center ">
                  <h4 class="card-title">
                    <%= link_to cat.name, '#' %>
                  </h4>
                  <div class='flex ms-auto space-x-6'>
                    <%= link_to '#', id: "button-delete-#{cat.id}", method: :delete, data: {confirm: ''} do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-red-500 hover:text-red-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 6h18"></path>
                        <path d="M8 6v-2a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        <path d="M10 11v6"></path>
                        <path d="M14 11v6"></path>
                        <path d="M5 6h14l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2Z"></path>
                      </svg>
                    <% end %>
                    <%= link_to '#', id: "button-edit-#{cat.id}" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-600 hover:text-gray-800" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M16.862 3.487a2.75 2.75 0 0 1 3.89 3.89l-11.25 11.25a4.5 4.5 0 0 1-1.67 1.07l-4.08 1.25a.75.75 0 0 1-.94-.94l1.25-4.08a4.5 4.5 0 0 1 1.07-1.67l11.25-11.25Z"></path>
                        <path d="M15.75 5.25l3 3"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>

                <ul class="flex space-x-5 text-sm text-gray-500">
                  <li><i class="bi bi-person"></i>名前</li>
                </ul>

                

              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="w-full text-center p-3">ねこの登録がありません</div>
    <% end %>
  </div>
</div>
